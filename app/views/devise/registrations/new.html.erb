<div class="center-form mb-3">
  <div class="card-body mb-3">

    <h3 class="form-title">Регистрация</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.label :email, "Электронная почта" %><br />
        <%= f.email_field :email, {class: 'form-control', autofocus: true, autocomplete: "email"} %>
      </div>

      <div class="field form-group">
        <%= f.label :password, "Пароль" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> символов минимум)</em>
        <% end %><br />
        <%= f.password_field :password, {class: 'form-control', autocomplete: "new-password"} %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation, "Подтвердите пароль" %><br />
        <%= f.password_field :password_confirmation,  {class: 'form-control',autocomplete: "new-password"} %>
      </div>

      <div class="btn-group">
        <div class="secondary">
            <%= render "devise/shared/links" %>
          </div>
        <div class="actions">
          <%= f.submit "Зарегистрироваться", {class: 'btn btn-primary'} %>
        </div>

      </div>
    <% end %>
  </div>
</div>
